
@model CorsoEditInputModel
<form method="POST">
    <div class="card">
        <div class="card-header">Modifica scheda corso</div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
                    <div class="card-text">
                        <div class="row">
                            <div class="col-12" asp-validation-summary="All"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NomeCorso"></label><br>
                                    <input type="text" asp-for="NomeCorso" class="form-control">
                                    <span asp-validation-for="NomeCorso"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CodiceDipartimento"></label><br>
                                    <input type="text" asp-for="CodiceDipartimento" class="form-control">
                                    <span asp-validation-for="CodiceDipartimento"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12"><br></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EdizioneCorso"></label><br>
                                    <input type="text" asp-for="EdizioneCorso" class="form-control">
                                    <span asp-validation-for="EdizioneCorso"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="OreCorso"></label><br>
                                    <input type="text" asp-for="OreCorso" class="form-control">
                                    <span asp-validation-for="OreCorso"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12"><br></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DataInizioCorso"></label><br>
                                    <input type="text" asp-for="DataInizioCorso" class="form-control">
                                    <span asp-validation-for="DataInizioCorso"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DataFineCorso"></label><br>
                                    <input type="text" asp-for="DataFineCorso" class="form-control">
                                    <span asp-validation-for="DataFineCorso"></span>
                               </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12"><br></div>
                        </div>
                        <div class="row">
                            <div class="col-md-5"></div>
                            <div class="col-md-4">
                                <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-reply"></i> Esci senza salvare</a>&nbsp;
                                <button type="submit" class="btn btn-outline-success"><i class="fas fa-save"></i> Aggiorna i dati</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_Validation"></partial>
}